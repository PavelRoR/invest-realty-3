#projects
	padding 0
.project
	width 100%
	max-width 524px
	margin 0 auto 40px
	@media screen and (max-width 560px)
		margin-bottom: 25px
	&-imgs
		display flex
		flex-wrap: wrap
		align-items: center
		justify-content: space-between
		img
			margin-bottom: 10px
			width 49%
	&-info
		&-wrapper
			border-radius: 8px
			padding 8px
			background-color: #232323
			background-image: linear-gradient( -48deg, #232323 0%, #0c0c0c 100%);
			box-shadow: 0px 1px 53.1px 5.9px rgba(0, 0, 0, 0.68);
		border-radius: 8px
		background-color: transparent
		border 2px dashed rgba(#d2c2a0, .3)
		padding 55px 20px 35px
		position relative
		margin-top: 3px
		min-height 433px
		@media screen and (max-width 1199px)
			min-height 460px
		@media screen and (max-width 991px)
			min-height 1px
		@media screen and (max-width 386px)
			padding 35px 20px 30px
		&-number
			position absolute
			font-family: Ab
			font-size: 30px
			text-transform uppercase
			color #d2c2a0
			opacity .3
			top 0
			left 10px
			@media screen and (max-width 386px)
				font-size: 26px
		&-title
			font-size: 24px
			font-weight: bold
			color #d2c2a0
			@media screen and (max-width 386px)
				font-size: 22px
		&-text
			font-size: 16px
			margin 25px 0 40px
			@media screen and (max-width 560px)
				margin 20px 0 30px
		&-list
			margin-bottom: 30px
			li
				list-style: none
				font-size: 16px
				span
					font-weight: bold
					display inline-block
.button-project-info
	position absolute
	bottom: 35px
	left 20px
	@media screen and (max-width 991px)
		position: static
#who
	padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.who
	&-title
		font-size: 20px
		font-weight: bold
		margin: 40px 0 30px
		text-transform uppercase
		@media screen and (max-width 560px)
			margin 20px 0
	&-img
		position relative
		&:before
			content ''
			display block
			position absolute
			top -50px
			right -60px
			background-color: #009de9
			width 478px
			height: 381px
			@media screen and (max-width 560px)
				width 100%
				height: 100%
			@media screen and (max-width 386px)
				top -25px
				right -30px
		img
			position relative
			z-index 20
			display block
			width 100%
			max-width 641px
			margin 40px auto 0
			@media screen and (max-width 991px)
				margin-top: 100px
			@media screen and (max-width 386px)
				margin-top: 50px
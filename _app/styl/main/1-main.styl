#main
	padding 0
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	position relative
.main
	&-clouds
		position absolute
		z-index 0
		width auto
		bottom: -210px
		left 0
		right 0
		margin 0 auto
	&-title
		font-size: 50px
		font-weight: 900
		text-transform uppercase
		text-align center
		line-height: 56px
		@media screen and (max-width 991px)
			font-size: 40px
		@media screen and (max-width 560px)
			font-size: 32px
			line-height: 1.1
		@media screen and (max-width 386px)
			font-size: 28px
		span
			display block
	&-subtitle
		font-size: 25px
		margin 25px 0 50px
		text-transform uppercase
		text-align center
		line-height: 56px
		@media screen and (max-width 560px)
			line-height: 1.1
			font-size: 22px
			margin 30px 0 40px
	&-list
		list-style: none
		margin-bottom: 45px
		@media screen and (max-width 560px)
			margin-bottom: 30px
		li
			margin-bottom: 30px
			@media screen and (max-width 560px)
				margin-bottom: 15px
			span
				display block
				font-size: 20px
				font-weight: bold
	&-text
		font-size: 18px
		font-weight: bold
	&-cta
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		color #d2c2a0
		margin 30px 0
.main-video-container
	position relative
	z-index 30
	margin: 90px 0 0
	@media screen and (min-width 2295px)
		margin-top: -20px
	@media screen and (max-width 991px)
		text-align: center
		margin 90px 0
	@media screen and (max-width 560px)
		margin 60px 0 40px
	&:before
		content: ''
		display block
		position absolute
		top -90px
		right -36px
		border-radius: 50%
		width 470px
		height: 470px
		background-color: #009de9
		@media screen and (max-width 560px)
			width 300px
			height: 300px
			top -50px
		@media screen and (max-width 386px)
			width 180px
			height: 180px
			top -30px
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 100px
	iframe
		position absolute
		width: 73%;
		height: 79%;
		display block
		background-color #000
		border-radius 0
		border: 0
		top 30px
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
		@media screen and (max-width 385px)
			top 15px
	&-laptop
		position absolute
		top 0
		left 0
		right 0
		width 100%
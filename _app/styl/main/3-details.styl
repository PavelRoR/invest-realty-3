#details
	padding 60px 0 100px
	@media screen and (max-width 560px)
		padding 40px 0 140px
	@media screen and (max-width 386px)
		padding 40px 0 100px
.details-info
	&-wrapper
		margin-top: 80px
		position relative
		border-radius: 34px 71px 19px 34px
		box-shadow: 0px 1px 53.1px 5.9px rgba(0, 0, 0, 0.68);
		background-color: #665d5d
		background-image: linear-gradient(45deg, #000, #665d5d)
		padding 10px
		@media screen and (max-width 560px)
			margin-top: 40px
		@media screen and (max-width 386px)
			margin-top: 0
	border-radius: 34px 71px 19px 34px
	padding 45px 25px 45px 65px
	background-color: #665d5d
	background-image: url(../img/backs/why-cta.png)
	background-repeat: no-repeat
	background-position: center
	background-size: 100% 100%
	@media screen and (max-width 560px)
		padding 30px 20px
	&:after
		content: 'â€œ'
		display block
		position absolute
		top -20px
		left 0
		font-size: 150px
		font-weight: bold
		color #fff
		z-index 30
		line-height: 100px
		@media screen and (max-width 991px)
			left 25px
		@media screen and (max-width 560px)
			font-size: 100px
			line-height: 60px
			top 0
			left 30px
	&-text
		span
			display block
			margin-top: 35px
			font-size: 20px
			font-weight: bold
			text-transform uppercase
			color #d2c2a0
			@media screen and (max-width 560px)
				margin-top: 20px
.details-cta
	padding 26px 48px
	border-radius: 8px
	background-color #fff
	font-size: 20px
	font-weight: bold
	text-transform uppercase
	text-align center
	color #000
	display block
	width 100%
	max-width 450px
	margin -10px auto 20px
	position relative
	z-index 10
	@media screen and (max-width 560px)
		padding 20px 30px
	@media screen and (max-width 386px)
		padding 20px
.details-imgs
	position relative
	padding-top: 100%
	@media screen and (max-width 991px)
		padding-top: 0
		margin-top: 40px
.details-img
	position absolute
	&-1
		top 0
		right -10px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 740px
	&-2
		top 0
		right -130px
		@media screen and (max-width 991px)
			display block
			width 100%
			max-width 626px
			margin 0 auto
			left 0
			right 0
	&-3
		bottom: -80px
		right -50px
		@media screen and (max-width 1199px)
			bottom: -290px
			right -10px
		@media screen and (max-width 991px)
			display none